<div class="container py-5">
  <h2 class="mb-4">Ajouter une citation</h2>

  <%= form_with model: @quote, url: admin_quotes_path do |f| %>
    <div class="mb-3">
      <%= f.label :content, "Citation" %>
      <%= f.text_area :content, class: "form-control", rows: 3 %>
    </div>

    <div class="mb-3">
      <%= f.label :author_name, "Auteur" %>
      <%= text_field_tag :author_name, nil, class: "form-control", placeholder: "Ex: Mark Twain" %>
    </div>

    <div class="mb-3">
      <%= f.label :category_id, "Catégorie" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choisir une catégorie" }, class: "form-select" %>
    </div>

    <%= f.submit "Ajouter", class: "btn btn-primary" %>
  <% end %>
</div>

