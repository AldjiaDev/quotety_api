<div class="container py-5">
  <h2 class="mb-4">Modifier la citation</h2>

  <%= form_with model: @quote, url: admin_quote_path(@quote), method: :patch do |f| %>
    <div class="mb-3">
      <%= f.label :content, "Citation" %>
      <%= f.text_area :content, class: "form-control", rows: 3 %>
    </div>

    <div class="mb-3">
      <%= f.label :author_name, "Auteur" %>
      <%= f.text_field :author_name, value: @quote.author&.name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :category_id, "Catégorie" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "form-select" %>
    </div>

    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  <% end %>
</div>
