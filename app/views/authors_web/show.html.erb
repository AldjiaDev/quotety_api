<div class="container py-5">
  <h2 class="fw-bold mb-5 text-center">Citations de <%= @author.name %></h2>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @quotes.each do |quote| %>
      <div class="col">
        <div class="card h-100 border-0 shadow-sm" style="background-color: #ffffff;">
          <div class="card-body d-flex flex-column justify-content-center text-center" style="aspect-ratio: 1 / 1;">
            <blockquote class="blockquote mb-0">
              <p class="fs-5">"<%= quote.content %>"</p>
              <footer class="blockquote-footer mt-3">
                <%= quote.author.name %>
              </footer>
            </blockquote>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
