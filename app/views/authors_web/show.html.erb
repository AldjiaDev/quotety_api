  <% if @quotes.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

      <!-- Liste de citations -->
      <%= render partial: "quotes_web/quote_card", collection: @quotes, as: :quote %>

