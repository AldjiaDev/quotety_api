<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold" style="font-family: 'Playfair Display', serif;">Nos Auteurs</h1>
    <p class="text-muted">Découvrez les penseurs derrière chaque citation inspirante.</p>
  </div>

  <% if @authors.any? %>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% @authors.each do |author| %>
        <div class="col">
          <%= link_to author_quotes_path(author), class: "text-decoration-none" do %>
            <div class="card shadow-sm border-0 ratio ratio-1x1 d-flex align-items-center justify-content-center"
                 style="background-color: #ffeede; border-radius: 1rem; transition: transform 0.3s ease;">
              <div class="card-body text-center px-3 d-flex flex-column justify-content-center align-items-center">
                <h5 class="mb-2 fw-bold" style="font-family: 'Playfair Display', serif; color: #3e2f27;">
                  <%= author.name %>
                </h5>
                <span class="small text-muted"><%= pluralize(author.quotes.count, "citation") %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-5 d-flex justify-content-center">
      <%= paginate @authors %>
    </div>
  <% else %>
    <p class="text-center text-muted">Aucun auteur trouvé.</p>
  <% end %>
</div>
