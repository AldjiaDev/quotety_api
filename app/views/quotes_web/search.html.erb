<div class="container py-5">
  <h2 class="fw-bold mb-4 text-center">Résultats pour "<%= params[:q] %>"</h2>

  <% if @quotes.any? %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @quotes.each do |quote| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0" style="background-color: #ffffff;">
            <div class="card-body d-flex flex-column justify-content-center text-center" style="aspect-ratio: 1 / 1;">
              <blockquote class="blockquote mb-0">
                <p class="fs-5">"<%= quote.content %>"</p>
                <footer class="blockquote-footer mt-3"><%= quote.author.name %></footer>
              </blockquote>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted">Aucun résultat trouvé.</p>
  <% end %>
</div>
