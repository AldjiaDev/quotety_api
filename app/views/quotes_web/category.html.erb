<% if @category %>
  <!-- INTRO DE LA CAT√âGORIE -->
  <div class="category-hero text-center text-dark py-5" style="background-color: #fff4ec;">
    <div class="container">
      <p class="text-uppercase text-danger fw-semibold small mb-2">Cat√©gorie</p>
      <h1 class="display-4 fw-bold mb-4"><%= @category.name %></h1>
      <div class="mx-auto" style="max-width: 960px;">
        <%= image_tag "categories/#{@category.slug}.jpg",
            class: "img-fluid w-100 rounded shadow-sm",
            style: "height: 300px; object-fit: cover;" %>
      </div>
    </div>
  </div>
<% end %>

<!-- LISTE DES CITATIONS -->
<div class="container py-5">
  <% if @quotes.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @quotes.each do |quote| %>
        <div class="col">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <blockquote class="blockquote mb-3">
                <p class="mb-0"><%= quote.content %></p>
              </blockquote>
              <footer class="blockquote-footer">
                <%= quote.author.name %>
              </footer>
            </div>

            <% if current_user %>
              <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                <%= button_to "‚ù§Ô∏è", favorites_path(quote_id: quote.id), method: :post, class: "btn btn-sm btn-outline-danger" %>
                <%= link_to "üñ® Imprimer", "#", class: "btn btn-sm btn-outline-secondary" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning text-center">
      Aucune citation disponible pour cette cat√©gorie.
    </div>
  <% end %>
</div>

