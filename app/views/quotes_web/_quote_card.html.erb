<div class="col-12 col-sm-6 col-lg-4 mb-4">
  <div class="card citation-card ratio ratio-1x1 overflow-hidden shadow-sm">
    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-3">
      <blockquote class="blockquote mb-3">
        <p class="mb-0 fs-6">« <%= quote.content %> »</p>
      </blockquote>
      <footer class="blockquote-footer small">
        <%= quote.author.name %>
        <% if quote.category %> — <%= quote.category.name %><% end %>
      </footer>
    </div>
  </div>
</div>
