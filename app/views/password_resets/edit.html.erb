<div class="container py-5" style="max-width: 500px;">
  <div class="card p-4 shadow-sm" style="background-color: #fffaf3; border-radius: 1rem;">
    <h2 class="text-center text-primary fw-bold mb-4">Définir un nouveau mot de passe</h2>

    <%= form_with model: @user, url: password_resets_path, method: :patch, local: true do |form| %>
      <%= hidden_field_tag :token, params[:token] %>

      <div class="mb-3">
        <%= form.label :password, "Nouveau mot de passe", class: "form-label fw-semibold" %>
        <%= form.password_field :password, class: "form-control rounded-pill px-3", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, "Confirmation du mot de passe", class: "form-label fw-semibold" %>
        <%= form.password_field :password_confirmation, class: "form-control rounded-pill px-3", required: true %>
      </div>

      <div class="text-center">
        <%= form.submit "Réinitialiser", class: "btn btn-primary rounded-pill px-4 py-2" %>
      </div>
    <% end %>
  </div>
</div>
